<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.ListSelectionView?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<VBox fx:id="root" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CreateUserRoleController">
    <Label text="Create Role">
        <font>
            <Font size="25.0" />
        </font>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </Label>
    <TextField fx:id="roleName" maxWidth="300.0" promptText="Role name">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </TextField>
    <ListSelectionView fx:id="roleListLSV" maxWidth="600.0" prefWidth="600.0">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
    </ListSelectionView>
   <Button fx:id="createRole" mnemonicParsing="false" onAction="#createRole" text="Create Role">
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
   </Button>
</VBox>
