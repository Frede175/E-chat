<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ListSelectionView?>

<VBox alignment="TOP_CENTER" prefWidth="1000.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="GUI.Controller.AddPermissionsToRoleController">
    <children>
        <Label text="Add permission(s) to role">
            <font>
                <Font size="25.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
        <ComboBox fx:id="selectRoleComboBox" prefWidth="150.0" promptText="Role ">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </ComboBox>
        <ListSelectionView fx:id="permissionLSV" maxWidth="600.0" prefWidth="600.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></ListSelectionView>
        <Button fx:id="addPermissionFromRole" mnemonicParsing="false" onAction="#addSelected" text="Add">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0" />
            </VBox.margin></Button>
    </children>
</VBox>
