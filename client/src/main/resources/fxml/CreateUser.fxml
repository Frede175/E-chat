<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ListSelectionView?>

<VBox fx:id="root" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.CreateUserController">
   <children>
      <Label text="Create User">
         <font>
            <Font size="25.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <Label prefWidth="300.0" text="The password needs to contain: &#10; - A special sign &#10; - A capital letter &#10; - A number &#10; - Above 12 letters">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Label>
      <TextField fx:id="UsernameTextField" maxWidth="300.0" promptText="Username">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></TextField>
      <PasswordField fx:id="PasswordTextField" maxWidth="300.0" prefWidth="300.0" promptText="password">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></PasswordField>
      <ComboBox fx:id="roleCB" prefWidth="300.0" promptText="Role">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </ComboBox>
      <ListSelectionView fx:id="departmentsLSV" maxWidth="600.0" prefWidth="600.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </ListSelectionView>
      <Button fx:id="createButtonid" mnemonicParsing="false" onAction="#createUser" text="Create">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin></Button>
   </children>
</VBox>
