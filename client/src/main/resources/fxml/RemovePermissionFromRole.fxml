<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.ListSelectionView?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.RemovePermissionFromRoleController">
    <children>
        <Label text="Remove permission(s) from role">
            <font>
                <Font size="25.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
        <ComboBox fx:id="selectRole" prefWidth="150.0" promptText="Role ">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </ComboBox>
      <ListSelectionView fx:id="permissionLSV" maxWidth="600.0" />
        <Button fx:id="removePermissionFromRole" mnemonicParsing="false" onAction="#removeSelected" text="Remove">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0" />
            </VBox.margin></Button>
    </children>
</VBox>
